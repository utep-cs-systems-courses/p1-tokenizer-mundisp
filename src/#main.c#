#include <stdio.h>
#include <string.h>

void main(){

  printf("Welcome to the tokenizer program, please type something.. press  to continue or
 e to exit");

  char choice;
  fgets(choice, 1,stdin);
  
  char input[30];


  while(choice != 'e'){

    printf("%s",'>');
    fgets(input,30,stdin);
    printf("%s",input);

    printf("%s", "next choice?..");
    fgets(choice, 1, stdin);
    
  }

  
  printf("Exiting program.. bye");
  return;
}
